def collatz(number):
    print(number)
    if number == 1:
        return number
    elif number %2 == 0:
        return collatz(number//2)
    else:
        return collatz(3 * number + 1) 
print('Enter number:')

while True:
    number=int(input())
    number=collatz(number)
    if number==1:
        break
